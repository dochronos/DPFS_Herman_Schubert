<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', { title: 'Carrito de Compras', stylesheets: [] }) %>

<body>
    <%- include('../partials/header.ejs') %>

    <main class="container my-5">

        <h1 class="mb-4 text-center fw-bold" style="font-family: 'Montserrat', sans-serif;">Carrito de Compras</h1>

        <% if (cartItems.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm border rounded overflow-hidden">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>Producto</th>
                            <th>Precio Unitario</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cartItems.forEach(item => { %>
                            <tr class="text-center">
                                <td class="text-start">
                                    <strong class="d-block"><%= item.Product.name %></strong>
                                    <small class="text-muted"><%= item.Product.description %></small>
                                </td>
                                <td>$<%= item.Product.price %></td>
                                <td><%= item.quantity %></td>
                                <td>$<%= item.price %></td>
                                <td>
                                    <form action="/products/cart/increase/<%= item.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success">+</button>
                                    </form>
                                    <form action="/products/cart/decrease/<%= item.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-warning">-</button>
                                    </form>
                                    <form action="/products/cart/remove/<%= item.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="card bg-white mt-4 shadow-sm border">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">Total del carrito:</h5>
                    <h3 class="text-success fw-bold mb-0">$<%= cartTotal.toFixed(2) %></h3>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <form action="/products/checkout" method="POST">
                    <button type="submit" class="btn btn-primary btn-lg">
                        Finalizar compra
                    </button>
                </form>
            </div>

        <% } else { %>
            <div class="alert alert-info mt-5 text-center">
                No hay productos en el carrito.
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>
