<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', { title: 'Productos', stylesheets: [] }) %>

<body>
    <%- include('../partials/header.ejs') %>

    <main class="catalogo py-5">
        <div class="container">
            <h1 class="mb-5 text-center fw-bold" style="font-family: 'Montserrat', sans-serif;">Productos disponibles</h1>
            <div class="row justify-content-center">
                <% data.forEach(product => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 bg-white product-card border-0 shadow-sm rounded-3">
                            <a href="/products/<%= product.id %>" class="text-decoration-none text-dark">
                                <img src="/images/quantumbloom/<%= product.image %>" 
                                     class="card-img-top img-fluid rounded-top"
                                     alt="<%= product.name %>"
                                     style="height: 200px; object-fit: cover;">

                                <div class="card-body">
                                    <h5 class="card-title fw-bold" style="color: #6c5ce7; font-family: 'Montserrat', sans-serif;">
                                        <%= product.name %>
                                    </h5>
                                    <p class="card-text">
                                        <span class="fw-semibold text-muted">Categor√≠a:</span> <%= product.Category.name %>
                                    </p>
                                    <p class="card-text">
                                        <span class="fw-semibold text-muted">Marca:</span> <%= product.Brand.name %>
                                    </p>
                                    <p class="card-text fs-5 text-success fw-bold">
                                        $<%= product.price %>
                                    </p>
                                </div>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>
