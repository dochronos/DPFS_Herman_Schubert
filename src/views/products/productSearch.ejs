<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', {
    title: 'Resultados de Búsqueda',
    stylesheets: []
}) %>

<body>
    <%- include('../partials/header.ejs') %>

    <main class="catalogo py-5">
        <div class="container">
            <% if (searchQuery) { %>
                <h1 class="text-center mb-5 fw-bold" style="font-family: 'Montserrat', sans-serif;">
                    Resultados de búsqueda para "<%= searchQuery %>"
                </h1>
            <% } %>

            <% if (products.length > 0) { %>
                <div class="row justify-content-center">
                    <% products.forEach(product => { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 bg-white product-card border-0 shadow-sm rounded-3">
                                <a href="/products/<%= product.id %>" class="text-decoration-none text-dark">
                                    <% if (product.image) { %>
                                        <img src="/images/quantumbloom/<%= product.image %>" 
                                             class="card-img-top img-fluid rounded-top" 
                                             alt="<%= product.name %>" 
                                             style="height: 200px; object-fit: cover;">
                                    <% } %>

                                    <div class="card-body">
                                        <h5 class="card-title fw-bold" style="color: #6c5ce7; font-family: 'Montserrat', sans-serif;">
                                            <%= product.name %>
                                        </h5>
                                        <p class="card-text">
                                            <span class="fw-semibold text-muted">Marca:</span>
                                            <%= product.Brand ? product.Brand.name : 'Sin marca' %>
                                        </p>
                                        <p class="card-text">
                                            <span class="fw-semibold text-muted">Categoría:</span>
                                            <%= product.Category ? product.Category.name : 'Sin categoría' %>
                                        </p>
                                        <p class="card-text fs-5 text-success fw-bold">
                                            $<%= product.price %>
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center my-5">
                    <h3 class="text-muted" style="font-family: 'Garamond', serif;">No se encontraron productos.</h3>
                </div>
            <% } %>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>
</html>
